public class AssetListPage : ContentPage
{
    private readonly string _groupName;

    public AssetListPage(string groupName)
    {
        _groupName = groupName;
        Title = groupName;
        Padding = new Thickness(20);

        // Create the asset list
        var assets = GetAssetsForGroup(groupName);
        var assetListView = new ListView
        {
            ItemsSource = assets,
            SeparatorVisibility = SeparatorVisibility.None
        };
        assetListView.ItemTapped += (sender, args) =>
        {
            var asset = args.Item as Asset;
            Navigation.PushAsync(new AssetDetailPage(asset));
        };

        // Create the data template for the asset list items
        var dataTemplate = new DataTemplate(() =>
        {
            var nameLabel = new Label
            {
                FontSize = 24,
                FontAttributes = FontAttributes.Bold,
                TextColor = Color.Black
            };
            nameLabel.SetBinding(Label.TextProperty, "Name");

            var typeLabel = new Label
            {
                FontSize = 18,
                TextColor = Color.Gray
            };
            typeLabel.SetBinding(Label.TextProperty, "Type");

            var layout = new StackLayout
            {
                Children = { nameLabel, typeLabel },
                Padding = new Thickness(10),
                Spacing = 5,
                Orientation = StackOrientation.Vertical
            };

            return new ViewCell { View = layout };
        });

        assetListView.ItemTemplate = dataTemplate;

        Content = assetListView;
    }

    private List<Asset> GetAssetsForGroup(string groupName)
    {
        // In a real application, you would retrieve the assets for the specified group from a database or API.
        // For this example, we will use hard-coded test data.
        var assets = new List<Asset>();
        if (groupName == "Cars")
        {
            assets.Add(new Asset { Name = "Car 1", Type = "Car" });
            assets.Add(new Asset { Name = "Car 2", Type = "Car" });
        }
        else if (groupName == "Trucks")
        {
            assets.Add(new Asset { Name = "Truck 1", Type = "Truck" });
            assets.Add(new Asset { Name = "Truck 2", Type = "Truck" });
            assets.Add(new Asset { Name = "Truck 3", Type = "Truck" });
        }
        else if (groupName == "Generator")
        {
            assets.Add(new Asset { Name = "Generator 1", Type = "Generator" });
        }
        else if (groupName == "Fridges")
        {
            assets.Add(new Asset { Name = "Fridge 1", Type = "Fridge" });
            assets.Add(new Asset { Name = "Fridge 2", Type = "Fridge" });
            assets.Add(new Asset { Name = "Fridge 3", Type = "Fridge" });
        }
        return assets;
    }
}
